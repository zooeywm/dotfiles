// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "model_parameters": []
  },
  "vim_mode": true,
  "icon_theme": "Zed (Default)",
  "ui_font_size": 25.0,
  "buffer_font_size": 25.0,
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "Ayu Dark"
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "ignore_system_version": false
      },
      "initialization_options": {
        "diagnostics": {
          "disabled": ["proc-macro-disabled"]
        },
        "check": {
          "command": "clippy",
          "extraArgs": [ "--no-deps" ]
        },
        "cachePriming": {
          "enable": false
        },
        "checkOnSave": false,
        "inlayHints": {
          "typeHints": {
            "enable": false
          },
          "parameterHints": {
            "enable": false
          },
          "discriminantHints": {
            "enable": "always"
          }
        },
        "procMacro": {
          "ignored": {
            "async-trait": ["async_trait"],
            "tokio-macros": ["main", "test"]
          }
        },
        "completion": {
          "autoimport": {
            "exclude": [
              {
                "path": "anyhow::Ok",
                "type": "always"
              }
            ]
          }
        }
      }
    }
  },
  "agent_servers": {
    "OpenCode": {
      "type": "custom",
      "command": "opencode",
      "args": ["acp"]
    }
  }
}
