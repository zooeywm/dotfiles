#!/usr/bin/env nu

def main [wallpapers: path = "~/Pictures/wallpaper"] {
    sleep 1sec
    cd $wallpapers
    let wallpapers = ls | get name | shuffle
    loop {
        let iterator = $wallpapers
        for wp in $iterator {
            swww img --transition-type=fade $wp
            sleep 10min
        }
    }
}
